<phpunit
	bootstrap="bootstrap.php"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	stopOnError="false"
	stopOnFailure="false"
	stopOnIncomplete="false"
	stopOnSkipped="false"
>
	<testsuites>
		<testsuite name="hunter">
			<directory>tests/Hunter/</directory>
		</testsuite>
	</testsuites>
	<logging>
		<log type="testdox-html" target="/var/www/html/phpunit/unittest.html"/>
		<log type="coverage-html" target="/var/www/html/phpunit/coverage" lowUpperBound="35" highLowerBound="70"/>
	</logging>
</phpunit>
